@using (Html.BeginForm("Export", "Zadanie", FormMethod.Post))
{
    <div style="overflow: hidden; width: 120px" >
        <div class="row text-center">
            <button type="submit" value="PDF" name="ExportType"><i class="fas fa-file-pdf icon-export text-primary"></i></button>
        </div>
        <div class="row text-center">
            <button type="submit" value="XLS" name="ExportType"><i class="fas fa-file-excel icon-export text-primary"></i></button>
        </div>
        <div class="row text-center">
            <button type="submit" value="TXT" name="ExportType"><i class="fas fa-file-alt icon-export text-primary"></i></button>
        </div>
        <div class="row text-center">
            <div class="form-check">
                <label class="switch">
                    <input type="checkbox" id="OneSite" onclick="SelectOneSiteOrAll()" name="OneSite">
                    <span class="slider round"></span>
                </label>
            </div>

        </div>
        <div class="row text-center" id="export-site">
            Wszystkie strony
        </div>
    </div>
}

<script>
    const SelectOneSiteOrAll = function () {
        const Selector = $('#OneSite');
        const SelectorText = $('#export-site');
        const actualText = Selector.prop('checked')
            ? 'Aktualna strona'
            : 'Wszystkie strony';
        console.log(SelectorText.html());
        SelectorText.html(actualText)
    }
</script>