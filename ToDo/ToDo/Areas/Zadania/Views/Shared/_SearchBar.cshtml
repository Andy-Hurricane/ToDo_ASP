@model ToDo.Services.Zadania.SearchBar.Content


@using (Html.BeginForm("Search", "Zadanie", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    
    var test = Model.GetType() == typeof(ToDo.Services.Zadania.SearchBar.Content);
    
    <text>@test</text>
    <div class="row">
        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                    @Html.TextBoxFor(t => Model.Topic, new { @class = "form-control", placeholder = Html.DisplayNameFor(t => Model.Topic) })
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                    @Html.TextBoxFor(t => Model.Action, new { @class = "form-control", placeholder = Html.DisplayNameFor(t => Model.Action) })
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                    @Html.EnumDropDownListFor(t => Model.StartSearch, "Data rozpoczęcia", new { @class = "form-control" })
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                    @Html.EnumDropDownListFor(t => Model.EndSearch, "Data zakończenia", new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                    @Html.EnumDropDownListFor(t => Model.PrioritySearch, "Priorytet", new { @class = "form-control" })
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                    @Html.EnumDropDownListFor(t => Model.ProgressSearch, "% zakończenia", new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                    @Html.EnumDropDownListFor(t => Model.StatusSearch, "Status", new { @class = "form-control" })
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                    <input type="submit" name="submit" class="btn btn-default" value="Szukaj" />
                </div>
            </div>
        </div>

    </div>
}
